  <style>
    body {
      background-color: #0d0d0d;
      color: #f2f2f2;
    }
    .about-header {
      padding: 80px 20px 40px;
      font-family: "Averia Libre", system-ui;
      text-align: center;
      background: linear-gradient(145deg, #1a1a1a, #000000);
    }
    .about-header h1 {
      font-family: 'Creepster', cursive;
      font-size: 60px;
      color: #e50914;
      margin-bottom: 10px;
    }
    .about-header p {
      font-size: 20px;
      max-width: 800px;
      margin: 0 auto;
    }
    .about-content {
      padding: 40px 20px;
      font-family: "Averia Libre", system-ui;
      max-width: 1000px;
      margin: 0 auto;
      line-height: 1.8;
    }
    .about-content h2 {
      color: #ff4e4e;
      margin-top: 30px;
    }
    .about-content p {
      font-size: 19px;
    }
    .team-section {
      background-color: #111;
      font-family: "Averia Libre", system-ui;
      padding: 40px 20px;
      text-align: center;
    }
    .team-section h2 {
      color: #ff4e4e;
      margin-bottom: 30px;
    }
    .team-member {
      display: inline-block;
      width: 200px;
      margin: 15px;
    }
    .team-member img {
      width: 100%;
      border-radius: 50%;
      border: 2px solid #444;
    }
    .team-member h5 {
      margin-top: 10px;
      color: #f8f8f8;
    }
    .team-member p {
      font-size: 16px;
      color: #bbb;
    }
